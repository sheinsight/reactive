{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": [
      "./examples/**/app.tsx",
      "./packages/**/*",
      "./scripts/*.ts",
      "./locale.ts",
      "./rspress.config.ts"
    ],
    "ignore": ["./packages/reactive/src/utils/react-fast-compare.ts"],
    "ignoreUnknown": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "performance": {
        "noDelete": "off"
      },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noInferrableTypes": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
